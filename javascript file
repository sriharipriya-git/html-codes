<body>
   <div class="container">
    <h1> To Check Even or Odd number  </h1>
    <lable for="txtNum">Number:</lable>
    <input type="Number" id="Number" value="0"/><br/><br/>
    
    <input type="button" value="Click Here" onclick="test( )"/>
    <br/><br/>
   <span id="spanResult">Enter an integer</span>
   </div>
   <script type="text/javascript">
      function test( )
      {

        let num=Number(document.getElementById("Number").value);
        if(num%2==0)
        {
            document.getElementById("spanResult").innerHTML=num + "is Even Number";
        }
        else{
            document.getElementById("spanResult").innerHTML=num + "is Odd Number";
        }
      }
   </script>
